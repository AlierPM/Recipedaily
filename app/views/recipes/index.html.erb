<div class="row justify-content-center g-4">
  <% @recipes.each do |recipe| %>
    <div class="col-md-8">
      <div class="card h-100 shadow">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h5 class="card-title">
                <%= link_to recipe.name, recipe_path(recipe), class: "text-decoration-none" %>
              </h5>
              <% if user_signed_in? && current_user == recipe.user %>
                <%= form_with(model: recipe, method: :delete, local: true, data: { confirm: "Are you sure?" }) do |form| %>
                  <%= form.submit "Remove", class: "btn btn-danger mt-2" %>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-6">
              <p class="card-text"><%= recipe.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

